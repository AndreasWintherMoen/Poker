<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="720.0" maxWidth="1280.0" minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poker.UIManager">
   <children>
      <ImageView fx:id="background" fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true" />
      <VBox minHeight="720.0" minWidth="1280.0" prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox alignment="BOTTOM_CENTER" minWidth="1280.0" prefHeight="160.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="opponentFirstCard" fitHeight="150.0" fitWidth="95.0" pickOnBounds="true" preserveRatio="true" translateX="-10.0" />
                  <ImageView fx:id="opponentSecondCard" fitHeight="150.0" fitWidth="95.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" translateX="10.0" />
               </children>
            </HBox>
            <HBox minHeight="350.0" minWidth="1280.0" prefHeight="100.0" prefWidth="200.0" />
            <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="170.0" minHeight="50.0" minWidth="1280.0" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Button fx:id="restartButton" onAction="#clickRestart" mnemonicParsing="false" text="Restart">
                     <HBox.margin>
                        <Insets right="300.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="foldButton" onAction="#clickFold" layoutX="1224.0" layoutY="22.0" mnemonicParsing="false" text="Fold">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="checkButton" layoutX="1224.0" layoutY="22.0" mnemonicParsing="false" text="Check">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="callButton" layoutX="1224.0" layoutY="22.0" mnemonicParsing="false" text="Call">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="raiseButton" layoutX="1224.0" layoutY="22.0" mnemonicParsing="false" text="Raise">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" minWidth="1280.0" prefHeight="160.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="playerFirstCard" fitHeight="150.0" fitWidth="95.0" pickOnBounds="true" preserveRatio="true" translateX="-10.0" />
                  <ImageView fx:id="playerSecondCard" fitHeight="150.0" fitWidth="95.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" translateX="10.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
